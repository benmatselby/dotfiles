{
  "accessibility.signals.onDebugBreak": {
    "sound": "on"
  },
  "cSpell.diagnosticLevel": "Hint",
  "cSpell.language": "en-GB",
  "diffEditor.codeLens": true,
  "dotfiles.repository": "https://github.com/benmatselby/dotfiles.git",
  "dotfiles.installCommand": "containers.sh",
  "editor.accessibilitySupport": "off",
  "editor.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": true,
  "editor.minimap.enabled": false,
  "editor.minimap.scale": 3,
  "editor.minimap.sectionHeaderFontSize": 10,
  "editor.rulers": [80, 100, 120],
  "editor.stickyScroll.enabled": true,
  "editor.suggest.showWords": false,
  "editor.tabSize": 2,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock"
  },
  "extensions.ignoreRecommendations": true,
  "files.associations": {
    "*.hcl": "terraform"
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false,
    "editor": true,
    "editorInlineSuggestion": true,
    "editorInlineSuggestion.showWhenTyping": true,
    "editorInlineSuggestion.showWhenNoSuggestions": true
  },
  "githubPullRequests.fileListLayout": "tree",
  "githubPullRequests.pullBranch": "never",
  "go.toolsManagement.autoUpdate": true,
  "go.useLanguageServer": true,
  "go.lintTool": "golangci-lint",
  "go.lintFlags": ["--fast"],
  "openapi.defaultPreviewRenderer": "redoc",
  "outline.collapseItems": "alwaysCollapse",
  "php.suggest.basic": false,
  "php.validate.enable": false,
  "prettier.printWidth": 120,
  "python.analysis.autoImportCompletions": true,
  "redhat.telemetry.enabled": false,
  "search.exclude": {
    "**/.mypy_cache": true,
    "bandit_baseline": true
  },
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.integrated.profiles.osx": {
    "tmux": {
      "path": "tmux",
      "icon": "terminal-tmux",
      "args": ["-u", "new-session", "-A", "-s", "${workspaceFolderBasename}"]
    }
  },
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.shellIntegration.enabled": true,
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "window.autoDetectColorScheme": true,
  "window.restoreWindows": "none",
  "window.title": "${rootName}${separator}${activeFolderMedium}/${activeEditorShort}",
  "window.zoomLevel": 0,
  "workbench.layoutControl.enabled": true,
  "workbench.preferredDarkColorTheme": "Visual Studio Dark",
  "workbench.editor.enablePreview": true,
  "workbench.editor.untitled.labelFormat": "name",
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 12,
  "workbench.tree.enableStickyScroll": true,
  "workbench.tree.renderIndentGuides": "always",
  "zenMode.hideLineNumbers": false,
  "[dockercompose]": {
    "editor.defaultFormatter": "docker.docker"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.wordBasedSuggestions": "off",
    "editor.tabSize": 4,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.formatOnType": true
  },
  "[svelte]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "githubPullRequests.queries": [
    {
      "label": "Local Pull Request Branches",
      "query": "default"
    },
    {
      "label": "Waiting For My Review",
      "query": "repo:${owner}/${repository} is:open review-requested:${user}"
    },
    {
      "label": "Assigned To Me",
      "query": "repo:${owner}/${repository} is:open assignee:${user}"
    },
    {
      "label": "Created By Me",
      "query": "repo:${owner}/${repository} is:open author:${user}"
    },
    {
      "label": "All Open",
      "query": "default"
    }
  ],
  "terraform.languageServer.enable": true,
  "editor.multiCursorLimit": 31000,
  "remote.defaultExtensionsIfInstalledLocally": [
    "GitHub.copilot",
    "GitHub.copilot-chat",
    "GitHub.vscode-pull-request-github"
  ],
  "docker.extension.enableComposeLanguageServer": false,
  "database-client.autoSync": true,
  "window.nativeTabs": true,
  "window.commandCenter": false,
  "github.copilot.nextEditSuggestions.enabled": true
}
