[include]
  path = ~/.gitconfig.local
[core]
  excludesfile = ~/.gitignore
[color]
  ui = true
[diff]
  compactionHeuristic = true
  noprefix = true
[pull]
  ff = only
[init]
  defaultBranch = main
[user]
  name = Ben Selby
[safe]
  directory = *
[alias]
  ignored = !git ls-files -v | grep "^[[:lower:]]"
[gpg]
  format = ssh
