#!/usr/bin/env zsh

set -e

command="${1}"
package="${2}"

case "${command}" in
  "install")
    echo "ðŸš€ Installing package: ${package}"
    ${package}/install.sh
    echo "\n"
    ;;
  "uninstall")
    echo "ðŸ—‘  Uninstalling package: ${package}"
    ${package}/uninstall.sh
    echo "\n"
    ;;
  *)
    echo "${command} does not exist"
    exit 1
    ;;
esac
